#!/bin/sh

echo "----------------------------------"
echo "🔍 커밋 전 Lint 규칙을 검사합니다..."
echo "----------------------------------"

# lint-staged 실행 및 결과 확인
if npx lint-staged; then
  echo "✅ 모든 Lint 규칙이 성공적으로 적용되었습니다! 커밋을 진행합니다."
  echo "----------------------------------"
  exit 0
else
  echo "🚫 Lint 규칙 검사에서 오류가 발생했습니다. 오류를 수정한 후 다시 시도하세요."
  echo "----------------------------------"
  exit 1
fi
